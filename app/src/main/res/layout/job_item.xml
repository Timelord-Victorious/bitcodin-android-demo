<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp" android:layout_height="wrap_content"
    android:id="@+id/jobContainer"
    android:orientation="vertical"
    android:background="@drawable/item_selector">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/jobThumbnailIV"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/sample_img"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1337"
                android:id="@+id/jobIdTV"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:inputType="none" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hier kÃ¶nnte Ihre Werbung stehen!"
                android:id="@+id/jobInputfileTV"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:maxLines="3"
                android:inputType="none" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sourceContainer"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></LinearLayout>
</LinearLayout>