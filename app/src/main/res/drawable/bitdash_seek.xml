<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="10dp" android:bottom="10dp" android:id="@android:id/background">
        <shape>
            <solid android:color="#FFF7F7F7" />
            <size android:width="8dp" android:height="20dp" />
        </shape>
    </item>
    <item android:top="10dp" android:bottom="10dp" android:left="-1dp" android:right="-1dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#88F7F7F7" />
        </shape>
    </item>
</layer-list>